<div class="container pt-5">
  <h2><%= @island.name %></h2>
  <div class="banner">
    <% if @island.photos.attached? %>
      <%= cl_image_tag @island.photos[0].key, width: "60%", height: "auto", crop: :fill %>
      <%= cl_image_tag @island.photos[1].key, width: "60%", height: "auto", crop: :fill %>
    <% else %>
      <%= image_tag "island2.jpg", width: "60%", height: "auto" %>
      <%= image_tag "island3.jpg", width: "60%", height: "auto" %>
    <% end %>
  </div>

  <p><%= @island.description %></p>
  <p><%= @island.location %></p>
  <p><%= @island.price %></p>

  <%= simple_form_for [@island, @booking] do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <% if @island.user != current_user %>
      <%= f.button :submit %>
    <% else %>
      <%= f.button :submit, disabled: true %>
    <% end %>
  <% end %>
  <iframe width='100%' height='400px' src="https://api.mapbox.com/styles/v1/wisbeach/clid86jxk002e01pgdte5fzxh.html?title=false&access_token=pk.eyJ1Ijoid2lzYmVhY2giLCJhIjoiY2xob3cyMTcxMjBqcTNocXBicjhncWNsdSJ9.AP59Ew9AXh1LdRhRZiiiGQ&zoomwheel=false#2/16.15/-77.41" title="Streets" style="border:none;"></iframe>

  <div class="banner">
    <%= link_to "Back to islands", islands_path %>
  </div>
</div>
